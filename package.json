{
  "name": "mcp-grocy-api",
  "version": "1.0.0",
  "description": "A Grocy API integration for MCP",
  "license": "MIT",
  "type": "module",
  "bin": {
    "mcp-grocy-api": "./build/index.js"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "node scripts/build.js",
    "build": "tsc",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test-build": "node scripts/test-build.js",
    "test": "node --experimental-vm-modules node_modules/vitest/vitest.mjs run --config ./vitest.config.ts",
    "test:watch": "node --experimental-vm-modules node_modules/vitest/vitest.mjs --config ./vitest.config.ts",
    "check-tools": "ts-node scripts/check-tools.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/types": "^19.6.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.24",
    "jest": "^29.5.0",
    "semantic-release": "^22.0.12",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "mcp",
    "rest",
    "api",
    "http",
    "testing",
    "cline",
    "development",
    "typescript"
  ],
  "author": "saya6k",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saya6k/mcp-grocy-api.git"
  },
  "bugs": {
    "url": "https://github.com/saya6k/mcp-grocy-api/issues"
  },
  "homepage": "https://github.com/saya6k/mcp-grocy-api#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
