{
  "name": "mcp-grocy-api",
  "version": "1.6.0",
  "description": "Model Context Protocol (MCP) wrapper for grocy API",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "name": "mcp-grocy-api",
    "access": "public"
  },
  "bin": {
    "mcp-grocy-api": "./build/main.js"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "node scripts/build.js",
    "build": "tsc",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "check-tools": "node scripts/check-tools.js",
    "validate-release": "node scripts/check-tools.js --validate-release",
    "update-api-docs": "node scripts/fetch-grocy-api.js",
    "verify-release-config": "node scripts/verify-release-config.js",
    "prepare-dev-release": "node scripts/prepare-dev-release.js",
    "prepare-dev-release:patch": "node scripts/prepare-dev-release.js --patch",
    "prepare-dev-release:minor": "node scripts/prepare-dev-release.js --minor",
    "prepare-dev-release:major": "node scripts/prepare-dev-release.js --major",
    "prepare-dev-release:dryrun": "node scripts/prepare-dev-release.js --dry-run"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "fuse.js": "^7.0.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/types": "^19.6.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^20.11.20",
    "@types/uuid": "^10.0.0",
    "fs-extra": "^11.2.0",
    "semantic-release": "^22.0.12",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "vitest": "^3.1.3"
  },
  "keywords": [
    "grocy",
    "mcp",
    "rest",
    "api",
    "http",
    "testing",
    "cline",
    "development",
    "typescript"
  ],
  "author": "miguelangel-nubla",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miguelangel-nubla/mcp-grocy-api.git"
  },
  "bugs": {
    "url": "https://github.com/miguelangel-nubla/mcp-grocy-api/issues"
  },
  "homepage": "https://github.com/miguelangel-nubla/mcp-grocy-api#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
