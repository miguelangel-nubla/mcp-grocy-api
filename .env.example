# =============================================================================
# MCP Grocy API Server Configuration
# =============================================================================
# Copy this file to .env and configure with your values

# =============================================================================
# CORE GROCY CONNECTION (Required)
# =============================================================================

# Your Grocy instance URL (without trailing slash)
GROCY_BASE_URL=https://your-grocy-instance.com

# Your Grocy API key (get this from your Grocy user settings)
GROCY_APIKEY_VALUE=your_grocy_api_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# SSL certificate verification (defaults to true)
# GROCY_ENABLE_SSL_VERIFY=true

# Response size limit in bytes (defaults to 10000)
# REST_RESPONSE_SIZE_LIMIT=20000

# Enable HTTP/SSE server for web access (defaults to false)
ENABLE_HTTP_SERVER=true
HTTP_SERVER_PORT=8080

